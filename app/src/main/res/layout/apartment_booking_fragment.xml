<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ApartmentBookingFragment">

    <TextView
        android:id="@+id/apartment_booking_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Airmee apt" />

    <TextView
        android:id="@+id/apartment_booking_dates_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/apartment_booking_dates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apartment_booking_name_label" />

    <Button
        android:id="@+id/apartment_booking_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/apartment_booking_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/apartment_booking_beds_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/apartment_booking_beds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apartment_booking_dates_label" />

    <Button
        android:id="@+id/apartment_booking_select_dates_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/apartment_booking_select_dates"
        app:layout_constraintBottom_toBottomOf="@+id/apartment_booking_dates_label"
        app:layout_constraintStart_toEndOf="@+id/apartment_booking_dates_label"
        app:layout_constraintTop_toTopOf="@+id/apartment_booking_dates_label" />

    <TextView
        android:id="@+id/apartment_booking_beds_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/apartment_booking_beds_label"
        app:layout_constraintStart_toEndOf="@+id/apartment_booking_beds_label"
        app:layout_constraintTop_toTopOf="@+id/apartment_booking_beds_label"
        tools:text="2" />

</androidx.constraintlayout.widget.ConstraintLayout>